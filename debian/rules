# http://www.logilab.fr/ -- mailto:contact@logilab.fr

# Uncomment this to turn on verbose mode.
#export DH_VERBOSE=1


build: build-stamp
build-stamp: 
	dh_testdir
	python setup.py  build 
	cd src && make all
	touch build-stamp

clean: 
	dh_testdir
	dh_testroot
	rm -f build-stamp configure-stamp
	rm -rf build
	find . -name "*.pyc" | xargs rm -f
	rm -f changelog.gz
	cd src && make clean
	dh_clean

install: build
	dh_testdir
	dh_testroot
	dh_clean -k
	dh_installdirs /var/lib/debinstall
	python setup.py install --prefix=debian/debinstall/usr
	rm -rf debian/debinstall/usr/lib/python*/site-packages/debinstall/tests


binary-arch: build install
	dh_testdir 
	dh_testroot 
	dh_install -a
	dh_pycentral -a
	gzip -9 -c ChangeLog > changelog.gz
	dh_installchangelogs -a
	dh_installexamples -a
	dh_installdocs -a changelog.gz README
	dh_installman -a
	dh_strip -a
	dh_link -a
	dh_compress -a -X.py -X.ini -X.xml -Xtest
	dh_fixperms -a
	dh_installdeb -a
	dh_shlibdeps -a
	dh_gencontrol -a 
	dh_md5sums -a
	dh_builddeb -a

binary-indep:

binary: binary-arch
.PHONY: build clean binary binary-indep binary-arch

